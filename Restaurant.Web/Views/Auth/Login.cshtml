@model LoginActionRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Đăng nhập</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pd-3 mb-3">
                <input asp-for="UserName" class="form-control" placeholder="Tài khoản..." />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-3 mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit" >Đăng nhập</button>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
            }