@model OrderHeaderDto
@using Restaurant.Web.Utility

<form method="post">
    <br />
    <input asp-for="OrderHeaderId" hidden />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0">
                <div class="container row">
                    <div class="col-12 d-none d-md-block col-md-6 pb-1 text-warning h3">
                        Thông tin đơn hàng
                    </div>
                    <div class="col-12 col-md-4 offset-md-2 text-right mt-2">
                        <a asp-action="OrderIndex" class="btn btn-warning form-control btn-sm">Quay lại danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row my-1">
                                <div class="col-3">Họ và tên</div>
                                <div class="col-9">
                                    <input asp-for="Name" readonly class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Số điện thoại</div>
                                <div class="col-9">
                                    <input asp-for="Phone" readonly class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Địa chỉ email</div>
                                <div class="col-9">
                                    <input asp-for="Email" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Ngày đặt hàng</div>
                                <div class="col-9">
                                    <input value="@Model.OrderTime.ToShortDateString()" readonly class="form-control" />
                                </div>
                            </div>
                            @if (User.IsInRole(SD.RoleAdmin))
                            {
                                <div class="row my-1">
                                    <div class="col-3">ID thanh toán sản phẩm</div>
                                    <div class="col-9">
                                        <input asp-for="StripeSessionId" readonly class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Mã code thanh toán</div>
                                    <div class="col-9">
                                        <input asp-for="PaymentIntentId" readonly class="form-control" />
                                    </div>
                                </div>
                            }
                            <div class="row my-1">
                                <div class="col-3">Trạng thái đơn hàng</div>
                                <div class="col-9">
                                    <input asp-for="Status" readonly class="form-control" />
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-warning">Thông tin thanh toán</span>
                            </h4>
                            <label class="bg-info text-dark text-center form-control my-2">Trạng thái đơn hàng - @Model.Status </label>

                            <ul class="list-group mb-3">
                                @foreach (var detail in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">

                                                <h6 class="my-0 text-white-50">@detail.ProductName</h6>
                                                <small class="text-muted">Giá tiền : @detail.Price.ToString("c")</small><br />
                                                <small class="text-muted">Số lượng : @detail.Count</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@((detail.Count * detail.Price).ToString("c"))</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-primary">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">Tổng thanh toán </h5>
                                        </div>
                                        <div class="col-6 text-end">
                                            <h5 class="text-white">@Model.OrderTotal.ToString("c")</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if (User.IsInRole(SD.RoleAdmin))
                            {
                                @if (Model.Status == SD.Status_Approved)
                                {
                                    <button asp-action="OrderReadyForPickup" asp-route-orderId="@Model.OrderHeaderId" type="submit" class="btn btn-success form-control my-1">Xác nhận giao hàng</button>
                                }
                                @if (Model.Status == SD.Status_ReadyForPickup)
                                {
                                    <button asp-action="CompleteOrder" asp-route-orderId="@Model.OrderHeaderId" type="submit" class="btn btn-success form-control my-1">Giao hàng thành công</button>
                                }
                                @if (Model.Status == SD.Status_Approved || Model.Status == SD.Status_ReadyForPickup)
                                {
                                    <button asp-action="CancelOrder" asp-route-orderId="@Model.OrderHeaderId" type="submit" class="btn btn-danger form-control my-1">Hủy giao hàng</button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


