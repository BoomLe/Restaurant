@model IEnumerable<CouponDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Danh sách phiếu giảm giá</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Coupon" asp-action="CouponCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Tạo phiếu</a>

			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Mã phiếu giảm giá
					</th>
					<th>
						Số tiền được giảm
					</th>
					<th>
						Số tiền giảm tối thiểu
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{<tr>
					<td>
						@item.CouponCode
					</td>
					<td>
						@((item.DiscountAmount).ToString("c"))
					</td>
					<td>
							@((item.MinAmount).ToString("c"))
					</td>
					<td>
							<a asp-controller="Coupon" asp-action="CouponDelete" asp-route-Id="@item.CouponId" class="btn btn-danger">
							<i class="bi bi-trash"></i>
						</a>
					</td>
				</tr>
				}
			</tbody>
		</table>

	</div>

</div>