@model CouponDto

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-secondary text-center">Xóa phiếu giảm giá</h1>
        <input asp-for="CouponId" hidden/>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Mã phiếu giảm giá</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="CouponCode" class="form-control" />
               
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Số tiền được giảm</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="DiscountAmount" class="form-control" />
              
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Số tiền giảm tối thiểu</label>
            </div>
            <div  class="col-10 pb-3">
                <input disabled asp-for="MinAmount" class="form-control" />
           
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Xóa" class="btn btn-danger form-control" />

            </div>
            <div class="col-5 ">

                <a asp-controller="Coupon" asp-action="CouponIndex" class="btn-primary btn form-control ">Danh sách phiếu giảm </a>
            </div>
           

        </div>

        <div>
        </div>
    </div>
</form>

